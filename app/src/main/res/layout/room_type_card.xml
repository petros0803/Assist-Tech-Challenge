<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="353dp"
        android:layout_height="124dp"

        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_bck"
            tools:layout_editor_absoluteX="2dp"

            tools:layout_editor_absoluteY="6dp">

            <TextView
                android:id="@+id/txt_type_room"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans_semibold"
                android:gravity="center"
                android:text="@string/roomtype"
                android:textColor="@color/creamWhite"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.071"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.148" />

            <TextView
                android:id="@+id/txt_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:text="%roomnumber%"
                android:textColor="@color/creamWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintStart_toEndOf="@+id/txt_type_room"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.133" />

            <TextView
                android:id="@+id/txt_price"
                style="@style/SwitchTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_room_number"
                app:layout_constraintVertical_bias="0.722" />

            <ImageView
                android:id="@+id/ac_ic"
                android:layout_width="34dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.032"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_type_room"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_mdi_air_conditioner" />

            <ImageView
                android:id="@+id/ac_true"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"

                app:layout_constraintBottom_toBottomOf="@+id/ac_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ac_ic"
                app:layout_constraintTop_toTopOf="@+id/ac_ic" />


            <ImageView
                android:id="@+id/wifi_ic"
                android:layout_width="34dp"
                android:layout_height="29dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.032"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ac_ic"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_clarity_wifi_solid" />

            <ImageView
                android:id="@+id/wifi_true"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/wifi_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/wifi_ic"
                app:layout_constraintTop_toTopOf="@+id/wifi_ic"
                app:layout_constraintVertical_bias="0.49" />

            <ImageView
                android:id="@+id/tv_ic"
                android:layout_width="34dp"
                android:layout_height="26dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ac_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ac_true"
                app:layout_constraintTop_toTopOf="@+id/ac_ic"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_si_glyph_button_tv" />

            <ImageView
                android:id="@+id/tv_true"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"

                app:layout_constraintBottom_toBottomOf="@+id/tv_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_ic"
                app:layout_constraintTop_toTopOf="@+id/tv_ic"
                app:layout_constraintVertical_bias="0.49" />

            <ImageView
                android:id="@+id/smoke_ic"
                android:layout_width="34dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/wifi_true"
                app:layout_constraintTop_toBottomOf="@+id/tv_ic"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_twotone_smoking_rooms" />

            <ImageView
                android:id="@+id/smk_true"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/smoke_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/smoke_ic"
                app:layout_constraintTop_toTopOf="@+id/smoke_ic"
                app:layout_constraintVertical_bias="0.49" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>